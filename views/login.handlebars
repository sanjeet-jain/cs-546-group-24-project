<div id="log-in-form-div" class="text-center container w-50">

  <form
    action="/login"
    id="login-form"
    method="POST"
    onsubmit="validatelogin(event)"
    class="needs-validation"
    novalidate
  >

    <h1 class="h3 mb-3 fw-normal">
      <i class="bi-calendar-check-fill"></i>
    </h1>
    <br />

    <div class="form-floating">
      <input
        type="email"
        class="form-control"
        name="emailId"
        id="emailId"
        placeholder="abc@mail.com"
        required
        pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$"
      />
      <label for="emailId">Email address</label>
      <div id="email_error" class="invalid-feedback">

      </div>
    </div>
    <br />
    <div class="form-floating">
      <input
        type="password"
        class="form-control"
        name="password"
        id="password"
        placeholder="Password"
        minlength="10"
        required
      />
      <label for="password">Password</label>
      <div id="password_error" class="invalid-feedback">

      </div>
    </div>
    <br />

    <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
  </form>
  <br />
  <a id="forgot" class="link-primary" href="/forgot">Forgot Password?</a>
  <br />

  <a id="register_link" class="link-secondary" href="/register">Not Registered?
    Click here to register</a>

</div>

<script src="./public/scripts/login.js" type="text/javascript">
</script>