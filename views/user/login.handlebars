<div id="log-in-form-div" class="text-center container w-50">

  <form action="/user/login" id="login-form" method="POST" class="needs-validation was-validated " novalidate>

    <h1 class="h3 mb-3 fw-normal">
      <i class="bi-calendar-check-fill">Login</i>
    </h1>
    <br />

    <div>
      <label for="email">Email address</label>
      <input required type="email" class="form-control" name="email" id="email" placeholder="abc@mail.com"
        aria-describedby="email_help_id" pattern="^[a-zA-Z]+[\._%+\-]*[a-zA-Z0-9]+@[a-zA-Z0-9\.\-]+\.[a-zA-Z]{2,}$"
        value="{{#if errorContent.email}}{{errorContent.email}}{{/if}}" />
      <small id="email_help_id" class="form-text text-muted">
        Please Enter Email Here</small>
      <div id="email_error" class="invalid-feedback">
        {{errorMessages.email}}
      </div>
    </div>
    <br />
    <div>
      <label for="password">Password</label>
      <input required type="password" class="form-control" name="password" id="password" placeholder="Password"
        minlength="8" pattern="^(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&_=+.])[a-zA-Z\d!@#$%^&_=+.]{8,}$"
        aria-describedby="password_help_id" value="{{#if errorContent.password}}{{errorContent.password}}{{/if}}" />
      <small id="password_help_id" class="form-text text-muted">
        Please Enter Password Here</small>
      <div id="password_error" class="invalid-feedback">
        {{errorMessages.password}}
      </div>
    </div>
    <br />

    <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
    {{#if error}}
    <div class="alert alert-danger" role="alert">
      <strong>{{error}}</strong>
    </div>
    {{/if}}
  </form>
  <br />
  <a id="forgot" href="/forgot">Forgot Password?</a>
  <br />

  <a id="signup_link" href="/user/signup">Not Registered?
    Click here to Signup</a>

</div>

<script src="/public/scripts/login.js" type="text/javascript">
</script>