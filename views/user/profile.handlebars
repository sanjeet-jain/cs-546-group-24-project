<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h1>User Profile</h1>
        </div>
        <div class="card-body">
          <div class="form-group row">
            <label class="col-md-4 col-form-label text-md-right">Email:</label>
            <div class="col-md-6">
              <p class="form-control-plaintext">{{currUser.email}}</p>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-md-4 col-form-label text-md-right">First Name:</label>
            <div class="col-md-6">
              <p class="form-control-plaintext">{{currUser.first_name}}</p>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-md-4 col-form-label text-md-right">Last Name:</label>
            <div class="col-md-6">
              <p class="form-control-plaintext">{{currUser.last_name}}</p>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-md-4 col-form-label text-md-right">Date of Birth:</label>
            <div class="col-md-6">
              <p class="form-control-plaintext">{{currUser.dob}}</p>
            </div>
          </div>

          <div class="form-group row mb-0">
            <div class="col-md-6 offset-md-4">
              <a class="btn btn-danger" href="/user/password">Change Password</a>
              <a class="btn btn-danger" href="/user/edit">Edit Profile</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>