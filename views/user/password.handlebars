<div id="passxword-div" class="text-center container w-50">
  <form
    action="/user/password"
    id="password-form"
    method="POST"
    onsubmit="validatepassword(event)"
    class="needs-validation"
    novalidate
  >
  
    <h1 class="h3 mb-3 fw-normal">
      <i class="bi-calendar-check-fill"></i>
    </h1>
    <br />

    <div class="form-floating">
      <input
        type="password"
        class="form-control"
        name="oldPassword"
        id="oldPassword"
        placeholder="Current Password"
      />
      <label for="password">Current Password</label>
      <div id="password_error" class="invalid-feedback">

      </div>
    </div>
    <br />
    <div class="form-floating">
      <input
        type="password"
        class="form-control"
        name="newPassword"
        id="newPassword"
        placeholder="New Password"
        minlength="10"
        required
      />
      <label for="password">New Password</label>
      <div id="newPassword_error" class="invalid-feedback">

      </div>
    </div>
    <br />
    <div class="form-floating">
      <input
        type="password"
        class="form-control"
        name="reEnterNewPassword"
        id="reEnterNewPassword"
        placeholder="Re-enter New Password"
        minlength="10"
        required
      />
      <label for="password">Re-enter New Password</label>
      <div id="reenter_error" class="invalid-feedback">

      </div>
    </div>
    <br />

        <button class="w-100 btn btn-lg btn-primary" type="submit">Change Password</button>
  </form>
    
          

<script src="/public/scripts/password.js" type="text/javascript"></script>