<div
  class="modal fade"
  id="modal-meeting-display"
  tabindex="-1"
  aria-labelledby="modal-meeting-label"
  aria-hidden="true"
  data-bs-backdrop="static"
>
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <h4 class="modal-title" id="modal-meeting-label">
          <i class=""></i>

        </h4>
        <button
          type="button"
          class="btn"
          aria-label="Edit"
          onclick="enableFormEdit()"
        >
          <i class="bi-pencil-fill"></i>
        </button>
        <button
          id="top-close-button"
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>

      <div class="modal-body">
        <fieldset id="form-enabler" disabled>
          <form id="event-form">
            {{! title }}
            <div class="mb-3">
              <label for="title" class="form-label">Title</label>
              <input
                required
                type="text"
                class="form-control"
                name="title"
                id="title"
                placeholder="Title"
                value=""
              />
              <div id="title_error" class="invalid-feedback">

              </div>
            </div>
            {{! textBody }}
            <div class="mb-3">
              <label for="textBody" class="form-label">Description</label>
              <input
                type="text"
                class="form-control"
                name="textBody"
                id="textBody"
                placeholder="Description"
                value=""
              />
              <div id="textBody_error" class="invalid-feedback">

              </div>
            </div>
            {{! tag }}
            <div class="mb-3">
              <label for="tag" class="form-label">Tag</label>
              <input
                type="text"
                class="form-control"
                name="tag"
                id="tag"
                placeholder="Tag"
                value=""
              />
              <div id="tag_error" class="invalid-feedback">

              </div>
            </div>
            {{! priority }}
            <div class="mb-3">
              <label for="priority" class="form-label">Priority</label>
              <select
                class="form-select form-select-sm"
                name="priority"
                id="priority"
              >
                <option selected value="1">Low</option>
                <option value="2">Medium</option>
                <option value="3">High</option>
              </select>
            </div>
            {{! dateAddedTo }}
            <div class="form-floating mb-3">
              <input
                type="datetime-local"
                class="form-control"
                name="dateAddedTo"
                id="dateAddedTo"
                value=""
              />
              <label for="dateAddedTo" class="form-label">Date to Add event to
              </label>

              <div id="dateAddedTo_error" class="invalid-feedback">

              </div>
            </div>
            {{! dateDueOn }}
            <div class="form-floating mb-3">
              <input
                type="datetime-local"
                class="form-control"
                name="dateDueOn"
                id="dateDueOn"
                value=""
              />
              <label for="dateDueOn" class="form-label">Date event is due on
              </label>

              <div id="dateDueOn_error" class="invalid-feedback">

              </div>
            </div>
            {{! repeating }}
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                name="repeating"
                id="repeating"
                aria-describedby="repeating_help_id"
                value="true"
              />
              <label class="form-check-label" for="repeating">
                Is the event repeating?
              </label>
              <small id="repeating_help_id" class="form-text text-muted">
                Please check if you need the event to repeat</small>
            </div>
            {{! repeatingIncrementBy }}
            <div class="mb-3">
              <label
                for="repeatingIncrementBy"
                class="form-label"
              >repeatingIncrementBy</label>
              <select
                class="form-select form-select-sm"
                name="repeatingIncrementBy"
                id="repeatingIncrementBy"
              >
                <option selected value="day">day</option>
                <option value="week">week</option>
                <option value="month">month</option>
                <option value="year">Year</option>
              </select>
            </div>
            {{! repeatingCounterIncrement }}
            <div class="form-floating mb-3">
              <input
                type="number"
                class="form-control"
                {{! change max to depending on the drop down }}
                min="0"
                max="5"
                id="repeatingCounterIncrement"
                name="repeatingCounterIncrement"
              />
              <label for="repeatingCounterIncrement" class="form-label">
                How Many times to repeat the event ? ( number )
              </label>

            </div>
            {{! add more fields for other events }}

          </form>
        </fieldset>
      </div>
      <div class="modal-footer">
        <button
          id="bottom-close-button"
          type="button"
          class="btn btn-secondary"
          data-bs-dismiss="modal"
        >Close</button>
        <input
          type="submit"
          form="event-form"
          value="Save Changes"
          class="btn btn-primary"
        />
      </div>

    </div>
  </div>
</div>