<div class="modal fade" id="modal-note-display" tabindex="-1" aria-labelledby="modal-note-label" aria-hidden="true"
  data-bs-backdrop="static">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <h4 class="modal-title" id="modal-note-label">
          <i class="">note Event</i>

        </h4>
        <button type="button" class="btn btn-edit" aria-label="Edit" {{! onclick="enableFormEdit()" }}>
          <i class="bi-pencil-fill"></i>
        </button>
        <button id="note-top-close-button" type="button" class="btn-close" data-bs-dismiss="modal"
          aria-label="Close"></button>
      </div>

      <fieldset id="note-form-enabler" disabled>
        <div class="modal-body">
          <form id="note-form" class="needs-validation" novalidate>
            {{! title }}
            <div class="mb-3">
              <label for="note_title" class="form-label">Title</label>
              <input required type="text" class="form-control" name="title" id="note_title" placeholder="Title" value=""
                maxlength="100" />
              <div id="note_title_error" class="invalid-feedback">

              </div>
            </div>
            {{! textBody }}
            <div class="mb-3">
              <label for="note_textBody" class="form-label">Description</label>
              <input type="text" class="form-control" name="textBody" id="note_textBody" placeholder="Description"
                value="" maxlength="200" />
              <div id="note_textBody_error" class="invalid-feedback">

              </div>
            </div>
            {{! tag }}
            <div class="mb-3">
              <label for="note_tag" class="form-label">Tag</label>
              <input type="text" class="form-control" name="tag" id="note_tag" placeholder="Tag" value=""
                maxlength="20" />
              <div id="note_tag_error" class="invalid-feedback">

              </div>
            </div>
            {{! priority }}
            <div class="mb-3">
              <label for="note_priority" class="form-label">Priority</label>
              <select required class="form-select form-select-sm" name="priority" id="note_priority">
                <option value="">Please select an option</option>
                <option value="1">Low</option>
                <option value="2">Medium</option>
                <option value="3">High</option>
              </select>
            </div>
            {{! dateAddedTo }}
            <div class="form-floating mb-3">
              <input type="datetime-local" class="form-control" name="dateAddedTo" id="note_dateAddedTo" value="" />
              <label for="note_dateAddedTo" class="form-label">Date to Add
                event to
              </label>

              <div id="note_dateAddedTo_error" class="invalid-feedback">

              </div>
            </div>
            {{! dateDueOn }}
            <div class="form-floating mb-3">
              <input type="datetime-local" class="form-control" name="dateDueOn" id="note_dateDueOn" value="" />
              <label for="note_dateDueOn" class="form-label">Date event is
                due on
              </label>

              <div id="note_dateDueOn_error" class="invalid-feedback">

              </div>
            </div>
            {{! repeating }}
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="repeating" id="note_repeating"
                aria-describedby="repeating_help_id" value="false" />
              <label class="form-check-label" for="note_repeating">
                Is the event repeating?
              </label>
              <small id="repeating_help_id" class="form-text text-muted">
                Please check if you need the event to repeat. if it is already
                checked and you uncheck it it will cause deletion of all other
                recurrences</small>
            </div>
            {{! repeatingIncrementBy }}
            <div class="mb-3">
              <label for="repeatingIncrementBy" class="form-label">repeatingIncrementBy</label>
              <select class="form-select form-select-sm" name="repeatingIncrementBy" id="note_repeatingIncrementBy">
                <option value="">Please select an option</option>
                <option value="day">day</option>
                <option value="week">week</option>
                <option value="month">month</option>
                <option value="year">Year</option>
              </select>
              <div id="note_repeatingIncrementBy_error" class="invalid-feedback">

              </div>
            </div>
            {{! repeatingCounterIncrement }}
            <div class="form-floating mb-3">
              <input type="number" class="form-control" {{! change max to depending on the drop down }} min="1" max="5"
                id="note_repeatingCounterIncrement" name="repeatingCounterIncrement" value="0" />
              <label for="note_repeatingCounterIncrement" class="form-label">
                How Many times to repeat the event ? ( number )
              </label>
              <div id="note_repeatingCounterIncrement_error" class="invalid-feedback">

              </div>
            </div>
            {{! add more fields for other events }}

          </form>
        </div>
        <div class="modal-footer">
          <div id="note-update-result">

          </div>
          <input id="note-bottom-submit-button" type="submit" form="note-form" value="Save Changes"
            class="btn btn-primary" />
        </div>
      </fieldset>

    </div>
  </div>
</div>