{{#if session}}
{{#if (eq title "Calendar")}}
<div id="calendar-container">

    <div id="datepickerContainer"></div>


</div>
<div class="card display_current_items_card">
    <div class="card-body">
        {{#if displayItems.length includeZero=true}}
        <h5 class="card-title" id="selected_date">Items for<br> {{selectedDate}}</h5>
        <div class="d-grid gap-1" id="display_current_items">
            {{#if displayItems.length includeZero=false}}
            {{#each displayItems}}
            {{#if (eq this.type "reminder")}}
            <div class="d-grid gap-1"><button
                    class="badge event-pill text-bg-warning text-wrap text-center event-button" data-bs-toggle="modal"
                    data-bs-target="#modal-reminder-display" data-bs-eventid="{{this._id}}"
                    data-bs-userid="{{../session.user_id}}" data-bs-event-type="reminder"><i
                        class="bi-alarm">{{this.title}}</i></button></div>
            {{/if}}
            {{#if (eq this.type "task")}}
            <div class="d-grid gap-1"><button class="badge event-pill text-bg-danger text-wrap text-center event-button"
                    data-bs-toggle="modal" data-bs-target="#modal-task-display" data-bs-eventid="{{this._id}}"
                    data-bs-userid="{{../session.user_id}}" data-bs-event-type="task"><i
                        class="bi-check2-square">{{this.title}}</i></button></div>
            {{/if}}
            {{#if (eq this.type "meeting")}}
            <div class="d-grid gap-1"><button
                    class="badge event-pill text-bg-primary text-wrap text-center event-button" data-bs-toggle="modal"
                    data-bs-target="#modal-meeting-display" data-bs-eventid="{{this._id}}"
                    data-bs-userid="{{../session.user_id}}" data-bs-event-type="meeting"><i
                        class="bi-calendar-event">{{this.title}}</i></button></div>
            {{/if}}
            {{#if (eq this.type "notes")}}
            <div class="d-grid gap-1"><button
                    class="badge event-pill text-bg-success text-wrap text-center event-button" data-bs-toggle="modal"
                    data-bs-target="#modal-notes-display" data-bs-eventid="{{this._id}}"
                    data-bs-userid="{{../session.user_id}}" data-bs-event-type="notes"><i
                        class="bi-file-text">{{this.title}}</i></button></div>
            {{/if}}
            {{/each}}
            {{else}}There are no events for the day
            {{/if}}
        </div>

        {{else}}
        <h5 class="card-title" id="selected_date">Select a Date to show events here!</h5>
        <div class="d-grid gap-1" id="display_current_items">
        </div>
        {{/if}}
    </div>
</div>


{{/if}}
{{/if}}