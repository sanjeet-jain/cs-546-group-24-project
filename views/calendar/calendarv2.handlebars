<!-- calendarv2.handlebars -->

<div id="calendar-div">
  <div id="modal-div">
    {{!-- {{>calendarModal modalsData=modalsData}} --}}
  </div>
  <table class="table table-bordered">

    <thead>

      <tr id="weekdays">
        {{#each weekdays}}
          <th scope="col">{{this}}</th>
        {{/each}}
      </tr>
    </thead>
    <tbody>
      {{#if months.length}}
      {{>month-view weeks=weeks}}
      {{/if}}
      {{#if week.length}}
      {{>week-view weeks=weeks}}

      {{/if}}

    </tbody>
  </table>

</div>
<script src="/public/scripts/calendarv2.js" type="text/javascript"></script>