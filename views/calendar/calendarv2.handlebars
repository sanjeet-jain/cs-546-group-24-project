<!-- calendarv2.handlebars -->

<div id="calendar-div">
  <div id="modal-div" class="modal-div">
      {{>meetingsModal }}
      {{>remindersModal}}
  </div>
  <table class="table table-bordered ">
    <thead class="sticky-calendar-head bg-light">
      <tr id="weekdays">
         {{#if week.length}}
        <th class="timeslots"></th>
        {{/if}}
        {{#if day}}
        <th class="timeslots"></th>
        {{/if}}
        {{#each weekdays}}
          <th scope="col">{{this}}</th>
        {{/each}}
      </tr>
    </thead>
    <tbody id="calendar-view" class="scrollable-calendar-body">
      {{#if weeks.length}}
      {{>month-view weeks=weeks}}
      <script src="/public/scripts/month-calendar.js" type="text/javascript"></script>
      {{/if}}
      {{#if week.length}}

      {{>week-view week=week timeslots=timeslots}}
      {{/if}}
      {{#if day}}
      {{>day-view day=day timeslots=timeslots}}
      {{/if}}
    </tbody>
  </table>
<script src="/public/scripts/calendarv2.js" type="text/javascript"></script>
</div>
