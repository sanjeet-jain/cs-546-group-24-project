<!-- calendarv2.handlebars -->

<div id="calendar-div">
 <div id="modal-div">
    {{>calendarModal modalsData=modalsData}}
  </div>
    <table class="table table-bordered">

        <thead>

            <tr id="weekdays">
                {{#each weekdays}}
                <th scope="col">{{this}}</th>
                {{/each}}
            </tr>
        </thead>
        <tbody>
            {{#each weeks}}
            <tr>
                {{#each this}}
                {{#if this.greyedOut}} 
                <td class="greyed-out"> {{this.day}}</td>
                {{else}}
                <td class="active-month" > {{this.day}}
                    {{#each this.modalData}}
                    <div class="d-grid gap-2">
                        <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#modal-{{this._id}}" >{{this.type}}</button>
                    </div>
                {{/each}}

                </td>
                {{/if}}
                {{/each}}
            </tr>
            {{/each}}
        </tbody>
    </table>
  
</div>
<script src="/public/scripts/calendarv2.js" type="text/javascript"></script>
